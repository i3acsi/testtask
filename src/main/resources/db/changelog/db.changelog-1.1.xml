<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">


    <changeSet id="1.1.0" author="vasiliy.gasevskiy">
        <createTable tableName="orders">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="description" type="TEXT">
            </column>

            <column name="client_name" type="VARCHAR(100)">
            </column>

            <column name="client_telephone" type="VARCHAR(100)">
            </column>

           <column name="created_date" type="DATE" defaultValue="NOW()">
                <constraints nullable="false"/>
            </column>

            <column name="created_time" type="TIME WITHOUT TIME ZONE" defaultValue="NOW()">
                <constraints nullable="false"/>
            </column>

            <column name="updated_date" type="DATE" defaultValue="NOW()">
                <constraints nullable="false"/>
            </column>

            <column name="updated_time" type="TIME WITHOUT TIME ZONE" defaultValue="NOW()">
                <constraints nullable="false"/>
            </column>

            <column name="active" type="BOOLEAN" defaultValue="TRUE">
                <constraints nullable="false"/>
            </column>

            <column name="holder_id" type="BIGINT">
            </column>

            <column name="courier_id" type="BIGINT">
            </column>

            <column name="history" type="TEXT">
            </column>

        </createTable>
    </changeSet>




</databaseChangeLog>